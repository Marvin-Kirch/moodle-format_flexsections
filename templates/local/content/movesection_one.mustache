{{!
    @template format_flexsections/local/content/movesection

    Displays the target for section moving.

    Example context (json):
    {
        "sectionid": 23,
        "sectiontitle": "Section title",
        "sections": [
            {
                "title": "General",
                "id": 42,
                "number": 1,
                "sectionurl": "#",
                "indexcollapsed": 0
            },
            {
                "title": "City of God or Cidade de Deus",
                "id": "43",
                "number": "2",
                "sectionurl": "#",
                "indexcollapsed": 1
            }
        ]
    }

}}
{{#number}}
    {{^singlesection}}
        <div>
            <a href="#{{id}}"
               class="collapse-list-link text-truncate"
               data-for="section"
               data-id="{{id}}"
               data-number="{{number}}"
               data-parentid="{{parentid}}"
               data-parents="{{parents}}"
               data-after="{{aftersectionid}}"
            >
                {{#str}} movebeforesection, format_flexsections, {{{title}}} {{/str}} - {{parents}} - {{aftersectionid}}
            </a>
        </div>
    {{/singlesection}}
    <div class="collapse-list-item d-flex p-0" id="movemodalsection{{number}}">
        {{^singlesection}}
        <a data-toggle="collapse"
           href="#movemodalcollapse{{number}}"
           aria-expanded="{{#contentcollapsed}}false{{/contentcollapsed}}{{^contentcollapsed}}true{{/contentcollapsed}}"
           aria-controls="movemodalcollapse{{number}}"
           class="collapse-list-link icons-collapse-expand {{#contentcollapsed}}collapsed{{/contentcollapsed}}"
        >
                <span class="collapsed-icon icon-no-margin mr-1"
                      data-toggle="tooltip" title="{{#str}} expand, core {{/str}}">
                    {{#pix}} t/collapsed, core {{/pix}}
                    <span class="sr-only">{{#str}} expand, core {{/str}}</span>
                </span>
            <span class="expanded-icon icon-no-margin mr-1"
                  data-toggle="tooltip" title="{{#str}} collapse, core {{/str}}">
                    {{#pix}} t/expanded, core {{/pix}}
                <span class="sr-only">{{#str}} collapse, core {{/str}}</span>
                </span>
        </a>
        {{/singlesection}}
        {{{title}}}
    </div>
    <div id="movemodalcollapse{{number}}"
         class="collapse-list-item-content collapse {{^contentcollapsed}}show{{/contentcollapsed}} pl-3"
         aria-labelledby="movemodalsection{{number}}"
         role="group"
    >
        <ul class="unlist">
            {{#haschildren}}
                {{#children}}
                        {{> format_flexsections/local/content/movesection_one }}
                {{/children}}
            {{/haschildren}}
            <li>
                <a href="#-{{id}}"
                   class="collapse-list-link text-truncate"
                   data-for="section"
                   data-id="-{{id}}"
                   data-number="{{number}}"
                   data-parentid="{{id}}"
                   data-parents="{{parents}},{{id}}"
                   data-after="{{lastchildid}}"
                >
                    {{#haschildren}}
                        {{#str}} moveendofsection, format_flexsections, {{{title}}} {{/str}}
                    {{/haschildren}}
                    {{^haschildren}}
                        {{#str}} moveassubsection, format_flexsections, {{{title}}} {{/str}}
                    {{/haschildren}}
                    - {{parents}},{{id}} - {{lastchildid}}
                </a>
            </li>
        </ul>
    </div>
{{/number}}

