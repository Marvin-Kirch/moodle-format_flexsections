{{!
    @template format_flexsections/local/content/movesection

    Displays the target for section moving.

    Example context (json):
    {
        "sectionid": 23,
        "sectiontitle": "Section title",
        "sections": [
            {
                "title": "General",
                "id": 42,
                "number": 1,
                "sectionurl": "#",
                "indexcollapsed": 0
            },
            {
                "title": "City of God or Cidade de Deus",
                "id": "43",
                "number": "2",
                "sectionurl": "#",
                "indexcollapsed": 1
            }
        ]
    }

}}
{{#number}}
    <li>
        <a href="#"
           class="collapse-list-link text-truncate"
           data-for="section"
           data-id="{{id}}"
           data-number="{{number}}"
           data-parentid="{{parentid}}"
        >
            Before '{{{title}}}'
        </a>
    </li>
    <li>
        {{{title}}}
        <ul class="list-unstyled ml-3">
            {{#haschildren}}
                {{#children}}
                        {{> format_flexsections/local/content/movesection_one }}
                {{/children}}
            {{/haschildren}}
            <li>
                <a href="#"
                   class="collapse-list-link text-truncate"
                   data-for="section"
                   data-id="-{{id}}"
                   data-number="{{number}}"
                   data-parentid="{{parentid}}"
                >
                    {{#haschildren}}
                        As the last subsection of '{{{title}}}'
                    {{/haschildren}}
                    {{^haschildren}}
                        As a subsection of '{{{title}}}'
                    {{/haschildren}}
                </a>
            </li>

        </ul>
    </li>
{{/number}}

