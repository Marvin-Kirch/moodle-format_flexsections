{{!
    @template format_flexsections/local/content/movesection

    Displays the target for section moving.

    Example context (json):
    {
        "sectionid": 23,
        "sectiontitle": "Section title",
        "sections": [
            {
                "title": "General",
                "id": 42,
                "number": 1,
                "sectionurl": "#",
                "indexcollapsed": 0
            },
            {
                "title": "City of God or Cidade de Deus",
                "id": "43",
                "number": "2",
                "sectionurl": "#",
                "indexcollapsed": 1
            }
        ]
    }

}}
<!--<p data-for="sectionname">{{#str}} movefull, moodle, {{sectiontitle}} {{/str}}:</p>-->
<ul class="collapse-list list-unstyled ml-3" id="destination-selector" role="tree">
    {{#sections}}
        {{> format_flexsections/local/content/movesection_one }}
    {{/sections}}
    <li>
        <a href="#"
           class="collapse-list-link text-truncate"
           data-for="section"
           data-id="0"
           data-number="0"
           data-parentid="0"
        >
            To the end
        </a>
    </li>

</ul>
